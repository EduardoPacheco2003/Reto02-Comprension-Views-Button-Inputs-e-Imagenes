<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context=".MainActivity"
              android:background="@color/background"
>

    <EditText
            android:id="@+id/form_name"
            android:hint="@string/form_name"
            android:textColorHint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:inputType="text"
            android:drawableStart="@drawable/person"
            android:drawablePadding="12dp"
            android:autofillHints="name"/>
    <EditText
            android:id="@+id/form_surname"
            android:hint="@string/form_surname"
            android:textColorHint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:inputType="text"
            android:drawableStart="@drawable/person"
            android:drawablePadding="12dp"
            android:autofillHints="name"/>

    <EditText
            android:id="@+id/form_phoneNumber"
            android:hint="@string/form_phoneNumber"
            android:textColorHint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:inputType="phone"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="12dp"
            android:autofillHints="phone"/>

    <EditText
            android:id="@+id/form_email"
            android:hint="@string/form_email"
            android:textColorHint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/email"
            android:drawablePadding="12dp"
            android:autofillHints="phone"/>

    <Button
            android:id="@+id/form_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="@string/form_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="10dp"
    />

    <ImageView
            android:id="@+id/form_ResultImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/check"
            android:visibility="invisible"/>


</LinearLayout>